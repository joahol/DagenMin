<Window x:Class="DagenMin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DagenMin"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    
    
    <Grid Margin="0,0,0,0" RenderTransformOrigin="0,0" Background="#FF8E8E8E">
        <ListView x:Name="lstVTasks" HorizontalAlignment="Left" Height="466" Margin="51,0,0,0" VerticalAlignment="Center" Width="422" SelectionChanged="listViewOnSelectionChanged" ItemsSource = "{Binding Path = Tasks}"  >
            <ListView.ItemTemplate>

                <DataTemplate>

                    <WrapPanel>
                        <TextBlock Text="{Binding Path = taskName,Mode = TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path = finished,Mode = TwoWay}"></TextBlock>
                        <CheckBox Name="Ferdig"  IsChecked="{Binding Path = finished,Mode = TwoWay}"></CheckBox>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Content="Dagen i dag" HorizontalAlignment="Left" Margin="51,117,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="lbldebug" Content="Debug" HorizontalAlignment="Left" Margin="509,0,0,0" VerticalAlignment="Center"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Right" Margin="0,633,909,0" VerticalAlignment="Top" Click="onBtnAdd"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="110,633,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="178,633,0,0" VerticalAlignment="Top"/>
    </Grid>
    <Window.Resources>
        <Style TargetType="ListView">
            <Setter Property="Opacity" Value="0.8"></Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Trigger.Setters>
                        <Setter Property="Opacity" Value="0.3"></Setter>
                    </Trigger.Setters>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
